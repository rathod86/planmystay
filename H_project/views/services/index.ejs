<% layout('layouts/boilerplate') %>

<!-- Hero Section -->
<div class="services-hero py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold text-white mb-4">
                    <i class="fas fa-star me-3"></i>Amazing Services
                </h1>
                <p class="lead text-white mb-4">
                    Discover what makes our properties special. From delicious meals to relaxing therapies, 
                    we provide everything you need for a perfect stay.
                </p>
                <button onclick="scrollToServices()" class="btn btn-warning btn-lg">
                    <i class="fas fa-arrow-down me-2"></i>Explore Services
                </button>
            </div>
            <div class="col-lg-6">
                <div class="services-illustration">
                    <div class="service-icon-large">
                        <i class="fas fa-utensils"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Services Grid -->
